</Layout>


<style>
	/* HEADER PROFIL */
.profil-header {
  display: flex;
  flex-direction: column;  /* Pour mettre les éléments en colonne */
  align-items: center;
  gap: 16px;
  margin-bottom: 32px;
  margin-top: 24px;
  justify-content: center;
}
.profil-photo {
  width: 450px;          /* Taille carrée supérieure */
  height: 450px;
  object-fit: cover;
  border-radius: 15px;   /* Coins très légèrement arrondis, carré propre */
  box-shadow: 0 4px 24px 0 #ced8eb55;
  border: 3px solid #e6ecfa;
  background: #e6ecfa;
}
.profil-header h1 {
  font-size: 2.2em;
  margin-bottom: 8px;
}
.profil-soustitre {
  color: #3e64ff;
  font-size: 1.25em;
  font-weight: 600;
  margin-top: 4px;
}
.competences-wrapper {
  display: flex;
  flex-wrap: wrap;
  gap: 24px;
  justify-content: center;
  margin: 32px 0;
}

.competence-card {
  flex: 1 1 340px;
  max-width: 380px;
  min-width: 260px;
  background: linear-gradient(90deg, #f7f7fa 70%, #e5e8f2 100%);
  border-radius: 16px;
  padding: 24px 20px;
  box-shadow: 0 2px 8px 0 #d0d0d7cd;
  transition: box-shadow 0.2s;
  border-left: 8px solid #3e64ff;
  margin-bottom: 12px;
}
.competence-card:nth-child(2){border-color:#ffb100;}
.competence-card:nth-child(3){border-color:#009e60;}
.competence-card:nth-child(4){border-color:#6b5b95;}
.competence-card:nth-child(5){border-color:#524763;}
.competence-card:nth-child(6){border-color:#ff4b3e;}

.competence-title {
  font-size: 1.1em;
  font-weight: bold;
  margin-bottom: 8px;
  color: #23294d;
}
.competence-desc {
  font-size: 1em;
  line-height: 1.6;
  color: #35383e;
}
@media(max-width:850px){
  .competences-wrapper{flex-direction:column;align-items:center;}
  .competence-card{max-width:100%;}
}

.cv-timeline-title {
  margin-bottom: 20px;
}
.cv-timeline {
  position: relative;
  margin: 32px 0 32px 12px;
  padding-left: 22px;
  border-left: 3px solid #3e64ff;
  max-width: 440px;
}
.cv-step {
  position: relative;
  padding: 18px 0 12px 32px;
}
.cv-step:last-child {padding-bottom:0;}
.cv-dot {
  position: absolute;
  left: -37px;
  top: 24px;
  width: 17px;
  height: 17px;
  background: #fff;
  border: 4px solid #3e64ff;
  border-radius: 50%;
  box-shadow: 0 0 0 3px #e5e8f2;
  z-index: 5;
}
.cv-label {
  font-size: 1.12em;
  font-weight: bold;
  color: #23294d;
}
.cv-period {
  font-size: 0.97em;
  color: #555a6f;
  margin-left: 6px;
}
@media (max-width: 600px) {
  .cv-timeline { max-width: 100%; }
  .cv-step { padding-left: 20px;}
}
</style>